<div class="comment_form">
    <%= form_with model: [recipe, comment], local:true do |f| %>
        <%= f.hidden_field :recipe_id, { value: @recipe.id} %>
        <div>
            <%= f.text_area :content %>
        </div>
        <div>
            <%= f.submit "コメントする" %>
        </div>
    <% end %>
</div>

