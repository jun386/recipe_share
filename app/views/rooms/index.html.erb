<div class="container">
  <h1>チャット一覧</h1>
  <div class="room_index_container">
    <span class="to_room_related"><%= link_to("相互フォロー一覧", "/rooms/related") %></span>
    <div class="room_index_wrapper">
      <% if @another_entries.present? %>
        <% @another_entries.each do |e| %>
          <div class="room_index">
            <% if e.user.image.present? %>
              <%= link_to room_path(e.room_id) do %>
                <%= image_tag e.user.image %>
              <% end %>
            <% else %>
              <%= link_to room_path(e.room_id) do %>
                <i class="fas fa-user-circle fa-4x fa-fw my-skyblue"></i>
              <% end %>
            <% end %>
            <%= link_to room_path(e.room_id), class: "room_index_username" do %>
              <%= e.user.nickname %>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <span class="non_room"><p>チャットがありません</p></span>
      <% end %>
    </div>
  </div>
</div>