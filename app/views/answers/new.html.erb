<div class="container">
    <h1>回答フォーム</h1>
    <p><%= @inquiry.name %></p>
    <p><%= @inquiry.email %></p>
    <p><%= @inquiry.content %></p>
    <%= form_for @answer,:url => {:action => :create} do |f| %>
        <div class="field">
          <%= f.label "回答", :class => "form_name" %>
          <%= f.text_area :content, class: 'form-control-area' %>
        </div> 
        
         <%= f.hidden_field :inquiry_id, :value => @inquiry.id %>
        
        <div class="actions inquiry_div">
          <%= f.submit "送信", class: "inquiry_btn" %>
        </div>
    <% end %>
</div>