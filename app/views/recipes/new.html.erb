<%= form_for @recipe do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', id: 'recipe_name' %>
  </div>

  <div class="field">
    <%= f.label :genre %>  
    <%= f.collection_select(:genre, Genre.all, :id, :name) %>
  </div>
  
  <div class="field">
    <%= f.label :materials %>
    <%= f.text_area :materials, class: 'form-control', id: 'recipe_name', placeholder: '人参、ほうれん草、・・・' %>
  </div> 
  
  <div class="field">
    <%= f.label :method %>
    <%= f.text_area :method, class: 'form-control', id: 'recipe_name' %>
  </div>    
    
  <div class="field">
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list, value: @recipe.tag_list.join(','), class: "form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :images %> 
    <%= f.file_field :images, multiple: true, class: 'form-control' %>
  </div>
  
  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>