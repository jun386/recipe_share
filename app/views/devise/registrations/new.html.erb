<div class="container">
  <h1>新規登録</h1>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>

    <div class="field">
      <%= f.label "ユーザーネーム", :class => "form-label1" %><br />
      <%= f.text_field :nickname , autocomplete: "nickname", :class => "form-control", required: true %>
    </div>
    <br>
    <div class="field">
      <%= f.label "都道府県" %><br />
      <%= f.collection_select(:prefecture, Prefecture.all, :id, :name) %>
    </div>
    <br>
    <div class="field">
      <%= f.label "性別" %><br />
      <label><%= f.radio_button :gender, "m", :class => "radio_button", required: true %>男性</label>
      <label><%= f.radio_button :gender, "f", :class => "radio_button" %>女性</label>
      <label><%= f.radio_button :gender, "o", :class => "radio_button" %>その他</label>
    </div>
    <br>
    
    <div class="field">
      <%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <em class="form-label3">(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
    </div>
  
    <div class="field">
      <%= f.label "パスワードの確認" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
    </div>
    
    <div class="actions-session">
      <%= f.submit "登録する", :class => "btn btn-user" %>
    </div>
  <% end %>
  
  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
</div>