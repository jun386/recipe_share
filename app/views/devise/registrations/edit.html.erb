<div class="container">
<h1>ユーザー情報の編集</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "メールアドレス", :class => "form-label1" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
  </div>

  <div class="field">
    <%= f.label "ユーザーネーム", :class => "form-label1" %><br />
    <%= f.text_field :nickname , autocomplete: "nickname", :class => "form-control" %>
  </div>
  <br>
  <div class="field">
    <%= f.label "都道府県" %><br />
    <%= f.collection_select(:prefecture, Prefecture.all, :id, :name) %>
  </div>
  <br>
  <div class="field">
    <%= f.label "性別" %><br />
    <label><%= f.radio_button :gender, "m", :class => "radio_button" %>男性</label>
    <label><%= f.radio_button :gender, "f", :class => "radio_button" %>女性</label>
    <label><%= f.radio_button :gender, "o", :class => "radio_button" %>その他</label>
  </div>
  <br>
  <div class="field">
    <%= f.label "自己紹介", :class => "form-label2" %><br />
    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", :class => "form-control-area" %>
  </div>

  <div class="field">
    <%= f.label "写真" %> 
    <%= f.file_field :image, :class => "img_up_btn" %>
  </div>
  <br>
  <div class="field">
    <%= f.label "現在のパスワード", :class => "form-label4" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "更新する", :class => "user_info_update_btn" %>
  </div>
<% end %>


<p><%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "user_delete_btn" %></p>

<!--<= link_to "Back", :back %>-->
</div>